<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codingassignment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodingAssignment">
        <activity
            android:name=".uicontroller.SearchAllStudents"
            android:parentActivityName=".uicontroller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.codingassignment.uicontroller.SearchAllStudents" />
        </activity>
        <activity
            android:name=".uicontroller.ViewAllStudents"
            android:parentActivityName=".uicontroller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.codingassignment.uicontroller.ViewAllStudents" />
        </activity>
        <activity
            android:name=".uicontroller.SecondActivity"
            android:parentActivityName=".uicontroller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.codingassignment.uicontroller.SecondActivity" />
        </activity>
        <activity android:name=".uicontroller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>